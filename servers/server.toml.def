log_file="server.log"
log_level="INFO"
pid_file="server.pid"
detach=true
watchdog_timeout=10
modules=[
"web:WebServer",
"mailserver:MailServer"
]

[web]
host="127.0.0.1"
port=8080
encoding="gbk"
template_dir="web"
blog_data_file="../blog-maker/dist/blog.json"
links=[
	{label="我的博客",link="blog/"},
	{label="天气预报",link="weather.asp"}
]
tianapi_key="xxx"
heweather_key="xxx"

[[web.routes]]
path="/static"
static="web/static"

[[web.routes]]
path=["/","/index.asp"]
module="web.index:index"

[[web.routes]]
path="/select_city.asp"
module="web.weather:select_city"

[[web.routes]]
path="/weather.asp"
module="web.weather:weather"

[[web.routes]]
path="/blog/{path:.*}"
module="web:StaticWithIndex"
rootdir="../blog-maker/dist"
index=["index.html","index.htm"]

