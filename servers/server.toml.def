log_file="server.log"
log_level="DEBUG"
pid_file="/data/data/com.termux/files/usr/tmp/server.pid"
detach=true
watchdog_timeout=10
modules=[
"web:WebServer",
"testserver:TestServer",
"mailserver:MailServer"
]

[web]
host="127.0.0.1"
port=8080
encoding="gbk"
template_dir="web"
image_max_size=[360,960]
links=[
	{label="我的博客",link="blogs"},
	{label="天气预报",link="weather.asp"}
]
tianapi_key="xxx"
heweather_key="xxx"

[[web.routes]]
path="/static"
static="web/static"

[[web.routes]]
path=["/","/index.asp"]
module="web.index:index"

[[web.routes]]
path="/select_city.asp"
module="web.weather:select_city"

[[web.routes]]
path="/weather.asp"
module="web.weather:weather"

[[web.routes]]
path="/news.asp"
module="web.news:news_handler"

[[web.routes]]
path="/news_images/{image_key}.jpg"
module="web.news:news_image_handler"

