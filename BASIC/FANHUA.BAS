10 DEFDBL A-Z:DEFINT I,X,Y:PI=3.141592654#:N=1
20 INPUT "a,b:",RP0,RP1
30 IF RP0<0 OR RP0>1 OR RP1<0 OR RP1>1 THEN PRINT "Invalid input.":END
40 R0=99/(1-RP0+RP0*RP1):R1=R0*RP0:R2=R1*RP1
50 KEY OFF:SCREEN 1:X0=159:Y0=100-R0+R1-R2:I=0
60 DT0=PI/45.0:DT1=R0/R1*PI/45.0: DR=R0-R1
65 X=159:Y=100-DR-R2:LINE (X,Y)-(X,Y),0
70 WHILE N=1 AND (I<90 OR ABS(X-X0)>1 OR ABS(Y-Y0)>1)
80 T0=I*DT0: T1=-I*DT1
90 X=159+1.2*(DR*SIN(T0)+R2*SIN(T1)): Y=100-(DR*COS(T0)+R2*COS(T1))
100 LINE -(X,Y),3:I=I+1:WEND
120 BEEP:WHILE INPUT$(1)="":WEND
130 SCREEN 0:WIDTH 80:CLS:END

