10 DEFINT A-Z:DIM G(448):KEY OFF:SCREEN 11:CLS
20 S=3^5:X=(640-S)/2:Y=(480-S)/2
30 LINE(X,Y)-(X+2,Y+2),1,B
40 FOR N=1 TO 4:GOSUB 100:NEXT N
50 WHILE INPUT$(1)="":WEND:SCREEN 0:WIDTH 80:CLS:END
100 S=3^N:GET (X,Y)-(X+S-1,Y+S-1),G
110 PUT (X+S,Y),G:PUT (X+S*2,Y),G:PUT (X,Y+S),G:PUT (X+S*2,Y+S),G
120 FOR I=0 TO 2:PUT (X+S*I,Y+S*2),G:NEXT I:RETURN
